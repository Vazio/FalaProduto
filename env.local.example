# Configuração para desenvolvimento LOCAL no Windows
# 
# INSTRUÇÕES:
# 1. Copie este ficheiro para .env
# 2. Edite os caminhos abaixo com o caminho completo do seu sistema
# 3. Adicione sua OPENAI_API_KEY se tiver

# LLM Configuration
OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01

LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1500

# Embeddings Configuration
EMBEDDINGS_PROVIDER=local
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
LOCAL_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=insurance_products
VECTOR_SIZE=1024

# RAG Pipeline Configuration
TOP_K=6
RERANK_TOP_K=3
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# Re-ranking Configuration
RERANKER=local
COHERE_API_KEY=
LOCAL_RERANKER_MODEL=BAAI/bge-reranker-base

# Guardrails & Security
MAX_CONTEXT_CHARS=12000
MAX_QUERY_LENGTH=500
BLOCKED_TERMS=segredo;credencial;senha;password;token;api_key;hack;inject
RATE_LIMIT_PER_MINUTE=20

# Observability
LOG_LEVEL=INFO
LOG_FORMAT=json

# ⚠️ IMPORTANTE: Caminhos para WINDOWS LOCAL
# Substitua com o caminho COMPLETO do seu sistema
# Use / ou \\ (não use apenas \)
DATA_DIR=C:/Users/Vasco Lima/FalaProduto/data
PDF_DIR=C:/Users/Vasco Lima/FalaProduto/data/pdfs
GROUNDTRUTH_DIR=C:/Users/Vasco Lima/FalaProduto/data/groundtruth


