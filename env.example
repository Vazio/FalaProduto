# LLM Configuration
OPENAI_API_KEY=
# Optional Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01

# LLM Provider: openai or azure
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1500

# Embeddings Configuration
EMBEDDINGS_PROVIDER=local  # local|openai
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
LOCAL_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=insurance_products
VECTOR_SIZE=1024

# RAG Pipeline Configuration
TOP_K=6
RERANK_TOP_K=3
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# Re-ranking Configuration
RERANKER=local  # local|cohere
COHERE_API_KEY=
LOCAL_RERANKER_MODEL=BAAI/bge-reranker-base

# Guardrails & Security
MAX_CONTEXT_CHARS=12000
MAX_QUERY_LENGTH=500
BLOCKED_TERMS=segredo;credencial;senha;password;token;api_key;hack;inject
RATE_LIMIT_PER_MINUTE=20

# Observability
LOG_LEVEL=INFO
LOG_FORMAT=json

# Data Paths
DATA_DIR=/data
PDF_DIR=/data/pdfs
GROUNDTRUTH_DIR=/data/groundtruth


